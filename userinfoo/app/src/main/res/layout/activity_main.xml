<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_alignParentStart="true"
            android:layout_marginStart="162dp" android:layout_alignParentTop="true" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" android:layout_alignParentTop="true" android:id="@+id/tvname"
            android:layout_marginTop="78dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:id="@+id/etname"
            android:layout_marginTop="73dp" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="Contact Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" android:layout_alignParentTop="true" android:id="@+id/tvcontactt"
            android:layout_marginTop="147dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:hint="Enter your contact num"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true" android:id="@+id/etcontact"
            android:layout_marginTop="126dp" android:layout_marginEnd="6dp"/>
    <TextView
            android:text="Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignEnd="@+id/tvname"
            android:layout_alignParentBottom="true"
            android:id="@+id/tvaddress"
            android:layout_marginBottom="297dp"
            android:layout_marginEnd="-7dp" android:layout_marginTop="30dp" android:layout_below="@+id/tvcontactt"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Enter your address"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_alignTop="@+id/tvcontactt" android:id="@+id/etaddress"
            android:layout_marginTop="38dp" android:layout_marginEnd="0dp" android:layout_toEndOf="@+id/tvaddress"
            android:layout_marginStart="61dp"/>
    <Button
            android:text="Okay!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="154dp" android:layout_alignParentBottom="true" android:id="@+id/tonextactivity"
            android:layout_marginBottom="48dp"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_alignParentBottom="true"
            android:id="@+id/userpicc"
            android:layout_alignStart="@+id/etname"
            android:layout_marginBottom="192dp"
            android:layout_marginStart="-26dp"/>
    <Button
            android:text="Select from galary!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignEnd="@+id/userpicc"
            android:layout_alignParentBottom="true" android:id="@+id/togetpic" android:layout_marginBottom="119dp"
            android:layout_marginEnd="-57dp"/>

</RelativeLayout>